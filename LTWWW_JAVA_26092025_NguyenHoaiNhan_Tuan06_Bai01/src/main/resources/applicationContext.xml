<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">
    <context:annotation-config/>
    <context:component-scan base-package="fit.iuh.se.beans.annotationbased"/>
    <bean id="user" class="fit.iuh.se.beans.annotationbased.User">
        <property name="userName" value="user01"/>
        <property name="password" value="123456"/>
    </bean>
    <bean id="group" class="fit.iuh.se.beans.annotationbased.Group">
        <property name="name" value="Group 1"/>
    </bean>
</beans>