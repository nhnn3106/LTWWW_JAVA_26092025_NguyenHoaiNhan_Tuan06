<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="class1" class="fit.iuh.se.beans.xmlbased.Class_">
        <property name="classId" value="DHKTPM18CTT"/>
        <property name="className" value="Dai Hoc KTPM18CTT"/>
    </bean>

    <bean id="student1" class="fit.iuh.se.beans.xmlbased.Student">
        <property name="id" value="001" />
        <property name="name" value="Nguyen Van A"/>

    </bean>

    <bean id="student2" class="fit.iuh.se.beans.xmlbased.Student">
        <property name="id" value="002" />
        <property name="name" value="Nguyen Van A"/>
        <property name="class_" ref="class1"/>
    </bean>

    <bean id="student3" class="fit.iuh.se.beans.xmlbased.Student">
        <constructor-arg name="id" value="003" />
        <constructor-arg name="name" value="Nguyen Van Anh"/>
        <constructor-arg name="class_" ref="class1"/>
    </bean>


    <bean id="address1" class="fit.iuh.se.beans.xmlbased.Address">
        <property name="street" value="Nguyen Van Bao"/>
        <property name="city" value="HCM"/>
        <property name="country" value="Viet Nam"/>
    </bean>

    <bean id="address2" class="fit.iuh.se.beans.xmlbased.Address">
        <property name="street" value="Nguyen Thai Son"/>
        <property name="city" value="HCM"/>
        <property name="country" value="Viet Nam"/>
    </bean>

    <bean id="person1" class="fit.iuh.se.beans.xmlbased.Person">
        <property name="name" value="Nguyen Van A1"/>
        <property name="age" value="29"/>
        <property name="addresses">
            <list>
                <ref bean="address1"/>
                <ref bean="address2"/>
            </list>
        </property>
        <property name="emails">
            <list>
                <value>a1@gmail.com</value>
                <value>a1@yahoo.com</value>
            </list>
        </property>
    </bean>

    <bean id="clasProperties"
    class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:class.properties</value>
            </list>
        </property>
    </bean>

    <bean id="class2" class="fit.iuh.se.beans.xmlbased.Class_">
        <property name="classId" value="DHKTPM"/>
        <property name="className" value="${className}"/>
    </bean>



</beans>